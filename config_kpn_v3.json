{
    "name": "COCO_KP2D",
    "n_gpu": 1,

    "arch": {
        "type": "KP2DNet",
        "args": {}
    },
    "data_loader": {
        "type": "HomoAdapDataLoader",
        "args":{
            "data_dir": "data/train2017",
            "batch_size": 8,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "V3_loss",
    "metrics": [
        
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 40,
            "gamma": 0.5
        }
    },
    "trainer": {
        "epochs": 50,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
